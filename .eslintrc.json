{
  "env": {
    "browser": false,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-shadow": "off",
    "no-unused-vars": "off",
    "arrow-body-style": "off",
    "import/no-extraneous-dependencies": "off",
    "max-len": 0,
    "@typescript-eslint/no-shadow": [
      "error"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-console": "off",
    "import/prefer-default-export": "off",
    "operator-linebreak": "off",
    "lines-between-class-members": "off",
    "@typescript-eslint/no-unused-vars": "error"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  }
}
