{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--testTimeout=50000",
        "--coverage",
        "false",
        "-t",
        "verifier",
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "/usr/local/opt/nvm/versions/node/v18.15.0/bin/node",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
